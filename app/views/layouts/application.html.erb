<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>MOVE&GROOVE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>   
    <div class="container"> 
    
      <%= render "layouts/header" %>

      <% if flash[:notice] %>
        <p class="alert alert-success alert-dismissible fade show"><%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </p>      
      <% elsif flash[:alert] %>
        <p class="alert alert-danger alert-dismissible fade show"><%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </p>
      <% end %>
      
      <div class="row">
        <div class="col">
          <%= yield %>
        </div>
      <div>

      <%= image_tag("running-woman-512.png", :alt => "rss feed", class: "runImage") %>
      <%= render "layouts/footer" %>
      
    </div>       
  </body>
</html>
