<div class="d-flex justify-content-center mt-5">
  <div>
    <h1>EXERCISES</h1>

    <table class="table table-bordered table-sm">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @exercises.each do |exercise| %>
          <tr>
            <td><%= exercise.name %></td>        
            <td><%= link_to 'Edit', edit_exercise_path(exercise), :class => 'btn btn-primary btn-sm' %></td>
            <td><%= link_to 'X', exercise, :class => 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    
    <%= link_to 'New Exercise', new_exercise_path, :class => 'btn btn-primary' %>
  </div>
</div>